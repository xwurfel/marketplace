@using market.Host.Models.Users

@{
    
}
@model IEnumerable<UserModel>
<h2>Admin tools</h2>

<table class="table-condensed" style="width: 100%">
    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                <img src="@Url.Content(item.UserName)" height="50px" width="50px" class="img-rounded" />
            </td>*@
            <td>
                @item.UserName
            </td>
            <td>
                @item.UserType
            </td>
            <td style="text-align: right">
                @item.Email
            </td>
            <td>
                @foreach(var prod in item.ProductModels)
                {
                    <a asp-controller="Product" asp-action="Index" asp-route-id="@prod.Id">@prod.Name</a>
                    <br />
                }
            </td>
           @* <td style="text-align: right">
                @item.UnitPrice.ToString("#,##0.00")
            </td>
            <td style="text-align: right">
                @item.Total.ToString("#,##0.00")
            </td>*@
        </tr>
    }
</table>
